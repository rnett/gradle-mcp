<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${GRADLE_MCP_LOG_DIR:-${user.home}/.gradle-mcp}/gradle-mcp-repl-worker.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${GRADLE_MCP_LOG_DIR:-${user.home}/.gradle-mcp}/gradle-mcp-repl-worker-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <prudent>true</prudent>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%X{PID}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%X{PID}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDERR"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>